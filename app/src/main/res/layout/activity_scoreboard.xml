<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.p12202749.tapcopter.activities.ScoreboardActivity">

    <LinearLayout
        android:id="@+id/current_high_score_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/scoreboard_current_high_score_label"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/current_high_score_value_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scoreboard_current_best_score_value"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/current_high_score_date_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scoreboard_current_best_score_date"
            android:textAlignment="center"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_high_score_layout"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scoreboard_previous_high_score_label"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/previous_score_one_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scoreboard_previous_best_score_value_date"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/previous_score_two_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scoreboard_previous_best_score_value_date"
            android:textAlignment="center"
            android:textSize="20sp" />
    </LinearLayout>
</RelativeLayout>
